{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "es2015"],
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  